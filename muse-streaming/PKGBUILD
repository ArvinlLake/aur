# Contributor: Pierluigi <pierluigi88@gmail.com>
pkgname=muse-streaming
pkgver=0.9.2
pkgrel=3
pkgdesc="MuSE is an application for the mixing, encoding, and network streaming of sound."
url="http://muse.dyne.org/"
license="GPL"
depends=(lame gtk2 xorg-clients libsndfile libvorbis)
source=(ftp://ftp.dyne.org/muse/sources/MuSE-$pkgver.tar.gz linklist.patch)
md5sums=('7b3b01a35af79b8852ee6b0f033ff46c' '50dcf69cb6b65a90ee9d20a7e6aa433d')

build() {
 cd $startdir/src/MuSE-$pkgver
 patch -p0 < $startdir/linklist.patch
 ./configure --prefix=/usr
 make || return 1
 make DESTDIR=$startdir/pkg install
}
